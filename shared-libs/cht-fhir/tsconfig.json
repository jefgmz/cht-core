{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declarationMap": true,
    "outDir": "dist",
    "sourceMap": true,
    "tsBuildInfoFile": "dist/tsconfig.build.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "../node_modules/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
